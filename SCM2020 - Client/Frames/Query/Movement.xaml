                        <DatePicker IsEnabled="False" x:Name="ClosureOSDatePicker" FontSize="22" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3" Margin="20 20 20 30" Grid.Row="15"></DatePicker>
