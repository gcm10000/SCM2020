            <dragablz:TabablzControl>
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem Header="Informações">
                    <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" Text="OLA MUNDO"></TextBlock>
                </TabItem>
                <TabItem Header="Produtos">
                    <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" Text="OLA MUNDO2"></TextBlock>
                </TabItem>
            </dragablz:TabablzControl>
        </Grid>
    </Grid>
</Page>
