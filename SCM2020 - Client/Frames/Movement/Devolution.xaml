<UserControl x:Class="SCM2020___Client.Frames.Movement.Devolution"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:SCM2020___Client.Frames.Movement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Background="#F0F0F0">
        <ScrollViewer Name="ScrollViewerInfo" Visibility="Visible">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="30" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Height="24" Text="DOC/OS" FontSize="22" Margin="20 30 20 0" Grid.Row="0"></TextBlock>
                        <Grid Margin="20 15 20 0" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="TextBoxWorkOrder" Grid.Column="0" FontSize="22" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3" KeyUp="TextBoxWorkOrder_KeyUp"></TextBox>
                            <materialDesign:PackIcon Name="PackIconStatus" Visibility="Hidden" Background="Transparent" Margin="10 0 0 0" Kind="Done" Grid.Column="1" Foreground="Green" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="Teste" />
                        </Grid>
                        <TextBlock Text="Data da Ordem de Serviço" FontSize="22" Margin="20 20 20 0" Grid.Row="2"></TextBlock>
                        <DatePicker Name="DatePickerMovingDate" FontSize="22" Margin="20 15 20 0" Grid.Row="3" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3" SelectedDateChanged="DatePickerMovingDate_SelectedDateChanged"></DatePicker>
                        <TextBlock Text="Local do Serviço" FontSize="22" Margin="20 20 20 0" Grid.Row="4"></TextBlock>
                        <TextBox Name="TextBoxServiceLocalization" KeyUp="TextBoxServiceLocalization_KeyUp"  FontSize="22" Margin="20 15 20 0" Grid.Row="5" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3"></TextBox>
                        <TextBlock Text="Número da Matrícula do Solicitante" FontSize="22" Margin="20 20 20 0" Grid.Row="6"></TextBlock>
                        <TextBox Name="TextBoxRegisterApplicant" KeyUp="TextBoxRegisterApplicant_KeyUp"  FontSize="22" Margin="20 15 20 0" Grid.Row="7" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3"></TextBox>
                        <TextBlock Text="Nome do Solicitante" FontSize="22" Margin="20 20 20 0" Grid.Row="8"></TextBlock>
                        <TextBox Name="TextBoxApplicant" IsEnabled="False" KeyUp="TextBoxApplicant_KeyUp"  FontSize="22" Margin="20 15 20 0" Grid.Row="9" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3"></TextBox>
                        <TextBlock Text="Entrada Referente" FontSize="22" Margin="20 20 20 0" Grid.Row="10"></TextBlock>
                        <ComboBox Name="ComboBoxReference" SelectedIndex="0" FontSize="22" Margin="20 15 20 30" Grid.Row="11" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3">
                            <ComboBoxItem>Não utilizado</ComboBoxItem>
                            <ComboBoxItem>Transferência Interna</ComboBoxItem>
                            <ComboBoxItem>Outra Comarca</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="1" Background="#F5F5F5" Margin="30">
                        <StackPanel Orientation="Horizontal">
                            <Button Margin="10 10 0 10" IsEnabled="False" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonNext1" Click="ButtonNext1_Click"  Content="Próximo">
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Grid Name="GridConsumpterProducts" Margin="30" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0 0 0 20" Background="#F5F5F5">
                <Grid Margin="10 10 10 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtSearchConsumpterProduct" materialDesign:HintAssist.Hint="Produtos consumíveis..."  materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3"  Grid.Column="0" FontSize="16" VerticalContentAlignment="Center" Padding="2 0 0 0" Background="White" Foreground="Black" KeyDown="TxtSearchConsumpterProduct_KeyDown"></TextBox>
                    <Button Style="{x:Null}" Cursor="Hand" Grid.Column="1" Margin="10 0 0 0" Background="#FF1368BD" Foreground="White" Height="60" Width="100" Padding="0" x:Name="ButtonSearchConsumpterProduct" Click="ButtonSearchConsumpterProduct_Click">
                        <materialDesign:PackIcon Kind="Search" Margin="10" Width="22" Height="22" VerticalAlignment="Center"></materialDesign:PackIcon>
                    </Button>
                </Grid>
            </Grid>
            <DataGrid Grid.Row="1" x:Name="DataGridConsumpterProducts" Visibility="Visible" SelectionMode="Single" SelectionUnit="FullRow" VerticalAlignment="Stretch" ColumnWidth="*" RowHeaderWidth="0"
                                  IsReadOnly="True"
                                  ScrollViewer.CanContentScroll="True" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  VirtualizingPanel.ScrollUnit="Pixel"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  AutoGenerateColumns="False"
                                  PreviewMouseWheel="DataGridConsumpterProducts_PreviewMouseWheel">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="Auto" Header="SKU" Binding="{Binding Path=Code}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Descrição" Binding="{Binding Path=Description}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Estoque Atual" Binding="{Binding Path=Quantity}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Quantidade Adicionada" Binding="{Binding Path=QuantityAdded}"></DataGridTextColumn>
                    <DataGridTemplateColumn Width="Auto" Header="Opções">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PopupBox PlacementMode="BottomAndAlignLeftEdges" Foreground="#FF999999" StaysOpen="False">
                                    <Button x:Name="BtnToAdd" Cursor="Hand" HorizontalAlignment="Stretch" Content="Adicionar ou Remover" Click="BtnAddRemove_Click"/>
                                </materialDesign:PopupBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="2" Background="#F5F5F5" Margin="0 15 0 0">
                <StackPanel Orientation="Horizontal">
                    <Button Margin="10 0 0 0" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonPrevious1" Click="ButtonPrevious1_Click"  Content="Anterior" Cursor="Hand"></Button>
                    <Button Margin="10 0 0 0" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonNext2" Click="ButtonNext2_Click"  Content="Próximo" Cursor="Hand"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Name="GridPermanentProducts" Margin="30" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0 0 0 20" Background="#F5F5F5">
                <Grid Margin="10 10 10 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtSearchPermanentProduct" materialDesign:HintAssist.Hint="Produtos permanentes..." KeyDown="TxtSearchPermanentProduct_KeyDown"  materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3"  Grid.Column="0" FontSize="16" VerticalContentAlignment="Center" Padding="2 0 0 0" Background="White" Foreground="Black"></TextBox>
                    <Button Style="{x:Null}" Cursor="Hand" Grid.Column="1" Margin="10 0 0 0" Background="#FF1368BD" Foreground="White" Height="60" Width="100" Padding="0" x:Name="ButtonSearchPermanentProduct" Click="ButtonSearchPermanentProduct_Click">
                        <materialDesign:PackIcon Kind="Search" Margin="10" Width="22" Height="22" VerticalAlignment="Center"></materialDesign:PackIcon>
                    </Button>
                </Grid>
            </Grid>
            <DataGrid Grid.Row="1" x:Name="DataGridPermanentProducts" Visibility="Visible" SelectionMode="Single" SelectionUnit="FullRow" VerticalAlignment="Stretch" ColumnWidth="*" RowHeaderWidth="0"
                                  IsReadOnly="True"
                                  ScrollViewer.CanContentScroll="True" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  VirtualizingPanel.ScrollUnit="Pixel"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  AutoGenerateColumns="False"
                                  PreviewMouseWheel="DataGridPermanentProducts_PreviewMouseWheel">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="Auto" Header="SKU" Binding="{Binding Path=Code}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Descrição" Binding="{Binding Path=Description}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Estoque Atual" Binding="{Binding Path=Quantity}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Patrimônio" Binding="{Binding Path=Patrimony}"></DataGridTextColumn>
                    <DataGridTextColumn Width="Auto" Header="Quantidade Adicionada" Binding="{Binding Path=QuantityAdded}"></DataGridTextColumn>
                    <DataGridTemplateColumn Width="Auto" Header="Opções">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PopupBox PlacementMode="BottomAndAlignLeftEdges" Foreground="#FF999999" StaysOpen="False">
                                    <StackPanel Width="150" Orientation="Vertical">
                                        <Button x:Name="BtnAddRemovePermanent" HorizontalAlignment="Stretch" Content="{Binding BtnContent}" Click="BtnAddRemovePermanent_Click"/>
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="2" Background="#F5F5F5" Margin="0 15 0 0">
                <StackPanel Orientation="Horizontal">
                    <Button Margin="10 0 0 0" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonPrevious2" Click="ButtonPrevious2_Click"  Content="Anterior" Cursor="Hand"></Button>
                    <Button Margin="10 0 0 0" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonNext3" Click="ButtonNext3_Click"  IsEnabled="False" Content="Próximo" Cursor="Hand"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <!--Conclusão-->
        <ScrollViewer Name="ScrollViewerFinish" Visibility="Collapsed" PreviewMouseWheel="ScrollViewerFinish_PreviewMouseWheel"  Background="#FFF1F1F1">
            <Grid Margin="30">
                <StackPanel>
                    <Grid Name="GridData">
                        <StackPanel>
                            <ItemsControl x:Name="ListView" Margin="0 0 0 15">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" Margin="0 10 10 10" Width="240" Height="100">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Margin="10" Text="{Binding Key}" FontSize="13" FontWeight="Bold"></TextBlock>
                                                <Grid Background="White" Margin="0 15 0 0">
                                                    <TextBlock Margin="10 0" Text="{Binding Value}" FontSize="18"></TextBlock>
                                                    <materialDesign:PackIcon Margin="0 0 20 0" Kind="{Binding Icon}" Foreground="Black" Width="22" Height="22" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                    <!--Materiais selecionados-->
                    <Grid Name="GridFinish" Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Resumo-->
                        <TextBlock Grid.Row="0" FontSize="30" FontFamily="Trebuchet MS" Text="Produtos Consumíveis" Margin="0 0 0 10"></TextBlock>
                        <DataGrid Grid.Row="1" Height="685" x:Name="DataGridFinalConsumpterProducts" Visibility="Visible" SelectionMode="Single" SelectionUnit="FullRow" VerticalAlignment="Stretch" ColumnWidth="*" RowHeaderWidth="0"
                                  IsReadOnly="True"
                                  ScrollViewer.CanContentScroll="True" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  VirtualizingPanel.ScrollUnit="Pixel"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  AutoGenerateColumns="False"
                                  PreviewMouseWheel="DataGridFinalConsumpterProducts_PreviewMouseWheel"
                                  Mouse.PreviewMouseMove="DataGridFinalConsumpterProducts_PreviewMouseMove"
                                  Mouse.MouseLeave="DataGridFinalConsumpterProducts_MouseLeave">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="Auto" Header="SKU" Binding="{Binding Path=Code}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Descrição" Binding="{Binding Path=Description}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Estoque Atual" Binding="{Binding Path=Quantity}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Quantidade Adicionada" Binding="{Binding Path=QuantityAdded}"></DataGridTextColumn>
                                <DataGridTemplateColumn Header="Opções" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <materialDesign:PopupBox PlacementMode="BottomAndAlignLeftEdges" Foreground="#FF999999" StaysOpen="False">
                                                <Button x:Name="BtnAdded" Cursor="Hand" HorizontalAlignment="Stretch" Content="Adicionar ou Remover" Click="BtnAddRemove_Click"/>
                                            </materialDesign:PopupBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Separator Grid.Row="2" Margin="0 15 0 0"></Separator>
                        <TextBlock Grid.Row="3" FontSize="30" FontFamily="Trebuchet MS" Text="Produtos Permanentes" Margin="0 30 0 0"></TextBlock>
                        <DataGrid Grid.Row="4" Margin="0 10 0 0" Height="685" x:Name="DataGridFinalPermanentProducts" Visibility="Visible" SelectionMode="Single" SelectionUnit="FullRow" VerticalAlignment="Stretch" ColumnWidth="*" RowHeaderWidth="0"
                                  IsReadOnly="True"
                                  ScrollViewer.CanContentScroll="True" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  VirtualizingPanel.ScrollUnit="Pixel"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  AutoGenerateColumns="False"
                                  PreviewMouseWheel="DataGridFinalPermanentProducts_PreviewMouseWheel"
                                  Mouse.PreviewMouseMove="DataGridFinalPermanentProducts_PreviewMouseMove"
                                  Mouse.MouseLeave="DataGridFinalPermanentProducts_MouseLeave">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="Auto" Header="SKU" Binding="{Binding Path=Code}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Descrição" Binding="{Binding Path=Description}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Estoque Atual" Binding="{Binding Path=Quantity}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Patrimônio" Binding="{Binding Path=Patrimony}"></DataGridTextColumn>
                                <DataGridTextColumn Width="Auto" Header="Quantidade Adicionada" Binding="{Binding Path=QuantityAdded}"></DataGridTextColumn>
                                <DataGridTemplateColumn Header="Opções" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <materialDesign:PopupBox PlacementMode="BottomAndAlignLeftEdges" Foreground="#FF999999" StaysOpen="False">
                                                <Button x:Name="BtnRemove" Cursor="Hand" HorizontalAlignment="Stretch" Content="Adicionar ou Remover" Click="BtnAddRemovePermanent_Click"/>
                                            </materialDesign:PopupBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Grid.Row="5" Background="#F5F5F5" Margin="0 15 0 0">
                            <StackPanel Orientation="Horizontal">
                                <Button Margin="10 10 0 10" IsHitTestVisible="True" IsEnabled="True" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonPrevious3" Click="ButtonPrevious3_Click"  Content="Anterior" Cursor="Hand"></Button>
                                <Button Margin="10 10 0 10" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonFinish" Content="Concluir" Click="ButtonFinish_Click"  Cursor="Hand"></Button>
                                <Button Margin="10 10 0 10" IsHitTestVisible="True" IsEnabled="False" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonPrint" Click="ButtonPrint_Click"  Content="Imprimir" Cursor="Hand"></Button>
                                <Button Margin="10 10 0 10" IsHitTestVisible="True" IsEnabled="False" HorizontalAlignment="Left" Background="#FF1368BD" Foreground="White" Height="40" Width="100" materialDesign:ShadowAssist.ShadowEdges="None" SnapsToDevicePixels="True" BorderThickness="0" x:Name="ButtonExport" Click="ButtonExport_Click"  Content="Exportar" Cursor="Hand"></Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
    <!--<DockPanel Background="White">
        --><!--
            https://www.youtube.com/watch?v=Jma5VYwEQcY
            C# WPF Material Design UI: Tab Menu
        --><!--
        <WebBrowser x:Name="webBrowser" Visibility="Collapsed"></WebBrowser>
        <Grid DockPanel.Dock="Top" VerticalAlignment="Top" Height="70">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10 0">
                <Button Uid="0" IsHitTestVisible="False" x:Name="ButtonInformation" Width="150" Content="INFORMAÇÕES" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3" Click="ButtonInformation_Click"  Cursor="Hand"></Button>
                <Button Uid="1" x:Name="ButtonPermanentProducts" Width="220" Content="PRODUTOS PERMANENTES" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3" Click="ButtonPermanentProducts_Click"  Cursor="Hand"/>
                <Button Uid="2" x:Name="ButtonFinish" Width="150" Content="FINALIZAÇÃO" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3" Click="ButtonFinish_Click"  Cursor="Hand"/>
            </StackPanel>
        </Grid>
        <ScrollViewer x:Name="InfoScrollViewer" Visibility="Visible"  VerticalScrollBarVisibility="Auto" Padding="30 0 30 30">
            <Border BorderBrush="LightGray" CornerRadius="2,2,2,2" BorderThickness="2,2,2,2">
                <StackPanel Margin="20" VerticalAlignment="Top" Name="Container">
                    <TextBlock Text="Ordem de Serviço" Margin="0 20 0 5" FontSize="18"></TextBlock>
                    <TextBox x:Name="OSTextBox" Width="188" LostFocus="OSTextBox_LostFocus" KeyDown="OSTextBox_KeyDown" Style="{x:Null}" Height="30" FontSize="16"></TextBox>
                    <TextBlock Text="Data da O.S" Margin="0 20 0 5" FontSize="18"></TextBlock>
                    <DatePicker x:Name="OSDatePicker" Width="188" SelectedDate="{x:Static sys:DateTime.Now}" Style="{x:Null}" IsEnabled="False" Height="30" FontSize="16"></DatePicker>
                    <TextBlock Margin="0 20 0 5" Text="Local do Serviço" FontSize="18"></TextBlock>
                    <TextBox x:Name="ServiceLocalizationTextBox" Width="188" Style="{x:Null}" IsEnabled="False" Height="30" FontSize="16"></TextBox>
                    <TextBlock Text="Número da Matrícula" Margin="0 20 0 5" FontSize="18"></TextBlock>
                    <TextBox x:Name="RegisterApplicantTextBox" Width="188" LostFocus="RegisterApplicantTextBox_LostFocus" KeyDown="RegisterApplicantTextBox_KeyDown" IsEnabled="False" Style="{x:Null}" Height="30" FontSize="16"></TextBox>
                    <TextBlock Text="Solicitante" Margin="0 20 0 5" FontSize="18"></TextBlock>
                    <TextBox x:Name="ApplicantTextBox" Width="188" IsEnabled="False" Style="{x:Null}" Height="30" FontSize="16"></TextBox>
                    <TextBlock Text="Entrada Referente a" Margin="0 20 0 5" FontSize="18"></TextBlock>
                    <ComboBox Width="188" IsEnabled="False" SelectedIndex="0" x:Name="ReferenceComboBox" Style="{x:Null}" Background="{x:Null}" Height="30" FontSize="16">
                        <ComboBoxItem>Não utilizado</ComboBoxItem>
                        <ComboBoxItem>Transferência Interna</ComboBoxItem>
                        <ComboBoxItem>Outra Comarca</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Border>
        </ScrollViewer>
        <DockPanel x:Name="InfoDockPanel" Visibility="Visible" Margin="0 0 10 30">
            <Grid Margin="0 0 0 10" DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox materialDesign:HintAssist.Hint="Pesquisar consumíveis..." KeyDown="TxtProductConsumpterSearch_KeyDown"  x:Name="TxtProductConsumpterSearch" materialDesign:TextFieldAssist.UnderlineBrush="#FF2196F3"  Grid.Column="0" FontSize="16" VerticalContentAlignment="Center" Padding="0 0 0 0" Background="White" Foreground="Black"></TextBox>
                <Button Style="{x:Null}" x:Name="ConsumpterProductSearchButton" Cursor="Hand" Grid.Column="1" Margin="10 0 0 0" Background="White" Foreground="Black" Height="40" Width="100" Padding="0" Click="ConsumpterProductSearchButton_Click">
                    <materialDesign:PackIcon Kind="Search" Margin="10" Width="22" Height="22" VerticalAlignment="Center"></materialDesign:PackIcon>
                </Button>
            </Grid>
            <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Button Content="Imprimir" Padding="5" x:Name="BtnPrint" Click="BtnPrint_Click"  HorizontalContentAlignment="Center" Style="{x:Null}" Margin="0 5 150 0" Cursor="Hand" HorizontalAlignment="Right" Background="White" Foreground="#FF2196F3">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Name="Border" BorderBrush="#FF2196F3" BorderThickness="1" Background="{TemplateBinding Background}">
                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsFocused" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Finalizar Movimentação" Padding="5" x:Name="BtnFinish" Click="BtnFinish_Click"  HorizontalContentAlignment="Center" Style="{x:Null}" Margin="0 5 0 0" Cursor="Hand" HorizontalAlignment="Right" Background="White" Foreground="#FF2196F3">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Name="Border" BorderBrush="#FF2196F3" BorderThickness="1" Background="{TemplateBinding Background}">
                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsFocused" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#007BFF" />
                </Grid.Resources>
                <DataGrid SelectionMode="Single" SelectionUnit="FullRow" BeginningEdit="ProductToAddDataGrid_BeginningEdit"  VerticalAlignment="Stretch" ColumnWidth="*" HorizontalContentAlignment="Center" RowHeaderWidth="0" x:Name="ConsumpterProductToAddDataGrid" CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
