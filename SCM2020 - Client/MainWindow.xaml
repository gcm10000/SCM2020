<Window x:Class="SCM2020___Client.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCM2020___Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1080">
    <Window.Resources>
        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="60"></EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="230"></EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="230"></EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="60"></EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"></BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"></BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid Background="LightGray">
        <Grid Height="70" VerticalAlignment="Top" Background="AliceBlue">
            <TextBlock Text="Sistema de Controle de Materiais" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Gabriel Machado" FontSize="18" VerticalAlignment="Center"></TextBlock>
                <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="True" Margin="10">
                    <StackPanel Width="150">
                        <Button Content="Conta"/>
                        <Button Content="Configurações"/>
                        <Button Content="Ajuda"/>
                        <Separator/>
                        <Button x:Name="BtnPopUp" Content="Logout"></Button>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Grid>

        <Grid Width="60" x:Name="GridMenu" HorizontalAlignment="Left" Background="Coral">
            <StackPanel>
                <Grid Height="150" Background="White">
                    <Button x:Name="BtnCloseMenu" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" Click="BtnCloseMenu_Click" Visibility="Collapsed">
                        <materialDesign:PackIcon Kind="ArrowLeft" Foreground="#FF1B3861" Width="25" Height="25"></materialDesign:PackIcon>
                    </Button>
                    <Button x:Name="BtnOpenMenu" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Click="BtnOpenMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                        <materialDesign:PackIcon Kind="Menu" Foreground="#FF1B3861" Width="25" Height="25"></materialDesign:PackIcon>
                    </Button>
                </Grid>
                <ListView MouseLeftButtonUp="ListView_MouseLeftButtonUp" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Painel de Controle" VerticalAlignment="Center" Margin="15 10" FontSize="18"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60" Name="Movimentacoes">
                        <StackPanel Orientation="Horizontal">
                            <!-- Popup Movimentações -->
                            <Popup x:Name="popup" StaysOpen="False" Placement="Right" Margin="0">
                                <ListBox Background="White">
                                    <ListBoxItem>
                                        <Button Content="Entrada por fornecedor"></Button>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <Button Content="Devolução"></Button>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <Button Content="Saída"></Button>
                                    </ListBoxItem>
                                </ListBox>
                            </Popup>
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <!--<materialDesign:PopupBox PlacementMode="RightAndAlignTopEdges" StaysOpen="True" Margin="10" VerticalAlignment="Center">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Width="25" Height="25" Kind="ViewDashboard"></materialDesign:PackIcon>
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel>
                                    <Button Content="Entrada por fornecedor"></Button>
                                    <Button Content="Entrada de material"></Button>
                                    <Button Content="Saída de material"></Button>
                                </StackPanel>
                            </materialDesign:PopupBox>-->
                            <TextBlock Text="Movimentações" VerticalAlignment="Center" Margin="15 10" FontSize="18"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Cadastro" VerticalAlignment="Center" Margin="15 10" FontSize="18"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Consultas" VerticalAlignment="Center" Margin="15 10" FontSize="18"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Relatórios" VerticalAlignment="Center" Margin="15 10" FontSize="18"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>